<!DOCTYPE html>
<html>
<head>
  <title>Istangram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <% if user_signed_in? %>
    <header>
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-4 col-sm-offset-3 col-xs-6">
            <h2><a href="/"><%= fa_icon "instagram" %> | <span class="site-name">Istangram</span></a></h2>
          </div>
          <div class="col-sm-1 col-sm-offset-1 col-xs-2" data-toggle="tooltip" placement="bottom" title="投稿一覧">
            <h3><%= link_to posts_path do %>
              <%= fa_icon "bandcamp" %>
            <% end %></h3>
          </div>
          <div class="col-sm-1 col-xs-2" data-toggle="tooltip" placement="bottom" title="ユーザー情報変更">
            <h3><%= link_to edit_user_registration_path do %>
              <%= fa_icon "user-o" %>
            <% end %></h3>
          </div>
          <div class="col-sm-1 col-xs-2" data-toggle="tooltip" placement="bottom" title="ログアウト">
            <h3><%= link_to destroy_user_session_path, method: :delete do %>
              <%= fa_icon "sign-out" %>
            <% end %></h3>
          </div>
        </div>
      </div>
    </header>
  <% end %>
  <%= yield %>

  <footer class="text-center">
    © 2017 ISTANGRAM
  </footer>
</body>
</html>
