<div class="container">
  <div class="row user-registration-form">
    <div class="col-md-4 col-md-offset-4 col-sm-10 text-center">
      <div class="panel panel-default">
        <div class="panel-body">
          <h1>Istangram</h1>
          <h4>新規ユーザー登録</h4>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
            </div>

            <div class="field">
              <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
            </div>

            <div class="field">
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
            </div>

            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %>
            </div>

            <div class="actions">
              <%= f.submit "登録する", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <!-- <%= render "devise/shared/links" %> -->
          <%= link_to "もどる", root_path %>

        </div>
      </div>
    </div>
  </div>
</div>
