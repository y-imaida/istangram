<div class="container">
  <div class="row user-login-form">
    <div class="col-md-4 col-md-offset-4 col-sm-10 text-center">
      <div class="panel panel-default">
        <div class="panel-body">
          <h1>Istangram</h1>
          <h4>ログイン</h4>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
            </div>

            <div class="field">
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :内容を記憶させる %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <!-- <%= render "devise/shared/links" %> -->
          <%= link_to "もどる", root_path %>

        </div>
      </div>
    </div>
  </div>
</div>
